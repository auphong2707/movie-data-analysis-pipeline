{
  "name": "TMDB to MongoDB Connection",
  "namespaceDefinition": "source", 
  "namespaceFormat": "${SOURCE_NAMESPACE}",
  "prefix": "",
  "sourceId": "YOUR_SOURCE_ID",
  "destinationId": "YOUR_MONGODB_DESTINATION_ID",
  "operationIds": [],
  "syncCatalog": {
    "streams": [
      {
        "stream": {
          "name": "popular_movies",
          "jsonSchema": {
            "type": "object",
            "properties": {
              "id": {"type": "integer"},
              "title": {"type": "string"},
              "overview": {"type": "string"},
              "release_date": {"type": "string"},
              "poster_path": {"type": "string"},
              "backdrop_path": {"type": "string"},
              "popularity": {"type": "number"},
              "vote_average": {"type": "number"},
              "vote_count": {"type": "integer"},
              "adult": {"type": "boolean"},
              "original_language": {"type": "string"},
              "original_title": {"type": "string"},
              "genre_ids": {
                "type": "array",
                "items": {"type": "integer"}
              },
              "video": {"type": "boolean"}
            }
          },
          "supportedSyncModes": ["full_refresh", "incremental"],
          "defaultCursorField": ["id"],
          "sourceDefinedPrimaryKey": [["id"]]
        },
        "config": {
          "syncMode": "incremental",
          "cursorField": ["id"], 
          "destinationSyncMode": "upsert",
          "primaryKey": [["id"]],
          "aliasName": "popular_movies",
          "selected": true
        }
      },
      {
        "stream": {
          "name": "top_rated_movies",
          "config": {
            "syncMode": "incremental",
            "cursorField": ["id"],
            "destinationSyncMode": "upsert", 
            "primaryKey": [["id"]],
            "aliasName": "top_rated_movies",
            "selected": true
          }
        }
      },
      {
        "stream": {
          "name": "now_playing_movies",
          "config": {
            "syncMode": "full_refresh",
            "destinationSyncMode": "overwrite",
            "primaryKey": [["id"]],
            "aliasName": "now_playing_movies", 
            "selected": true
          }
        }
      },
      {
        "stream": {
          "name": "upcoming_movies",
          "config": {
            "syncMode": "full_refresh",
            "destinationSyncMode": "overwrite", 
            "primaryKey": [["id"]],
            "aliasName": "upcoming_movies",
            "selected": true
          }
        }
      }
    ]
  },
  "schedule": {
    "units": 6,
    "timeUnit": "hours"
  },
  "status": "active",
  "resourceRequirements": {
    "cpu_request": "0.25",
    "cpu_limit": "0.5",
    "memory_request": "512Mi", 
    "memory_limit": "1Gi"
  }
}