# Environment Configuration
ENVIRONMENT=development

# API Keys
TMDB_API_KEY=your_tmdb_api_key_here
TMDB_BASE_URL=https://api.themoviedb.org/3

# Kafka Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPICS_MOVIES=movies
KAFKA_TOPICS_PEOPLE=people
KAFKA_TOPICS_CREDITS=credits
KAFKA_TOPICS_REVIEWS=reviews
KAFKA_TOPICS_RATINGS=ratings
SCHEMA_REGISTRY_URL=http://localhost:8081

# Storage Configuration
MINIO_ENDPOINT=localhost:9000
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin
MINIO_BUCKET_BRONZE=bronze-data
MINIO_BUCKET_SILVER=silver-data
MINIO_BUCKET_GOLD=gold-data

# MongoDB Configuration
MONGODB_CONNECTION_STRING=mongodb://admin:password@localhost:27017/moviedb?authSource=admin
MONGODB_DATABASE=moviedb

# Spark Configuration
SPARK_MASTER_URL=spark://localhost:7077
SPARK_APP_NAME=movie-analytics-pipeline

# Monitoring
GRAFANA_URL=http://localhost:3000
GRAFANA_USERNAME=admin
GRAFANA_PASSWORD=admin

# Superset Configuration
SUPERSET_URL=http://localhost:8088

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s



# Apache Iceberg Configuration

# Iceberg Catalog Type
# Options: hive, hadoop, rest, glue
ICEBERG_CATALOG_TYPE=hive
ICEBERG_CATALOG_NAME=movie_catalog

# Iceberg Warehouse Path (S3/MinIO)
ICEBERG_WAREHOUSE_PATH=s3a://iceberg-warehouse

# Hive Metastore Configuration
HIVE_METASTORE_URI=thrift://hive-metastore:9083

# REST Catalog Configuration (if using REST catalog)
# ICEBERG_REST_CATALOG_URI=http://iceberg-rest:8181

# S3/MinIO Configuration for Iceberg
ICEBERG_S3_ENDPOINT=http://minio:9000
ICEBERG_S3_ACCESS_KEY=minioadmin
ICEBERG_S3_SECRET_KEY=minioadmin
ICEBERG_S3_PATH_STYLE_ACCESS=true

# Table Configuration
ICEBERG_DEFAULT_FILE_FORMAT=parquet
ICEBERG_COMPRESSION_CODEC=snappy
ICEBERG_TARGET_FILE_SIZE_BYTES=134217728  # 128MB
ICEBERG_DELETE_MODE=merge-on-read

# Retention and Cleanup
ICEBERG_SNAPSHOT_RETENTION_DAYS=7
ICEBERG_METADATA_DELETE_AFTER_COMMIT_ENABLED=true

# Feature Flags
ICEBERG_ENABLE_TIME_TRAVEL=true
ICEBERG_ENABLE_SCHEMA_EVOLUTION=true
ICEBERG_ENABLE_PARTITION_EVOLUTION=true

# Database Names for Layers
ICEBERG_BRONZE_DATABASE=bronze
ICEBERG_SILVER_DATABASE=silver
ICEBERG_GOLD_DATABASE=gold