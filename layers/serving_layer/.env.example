# Serving Layer Environment Configuration

# ============================================================================
# MongoDB Configuration
# ============================================================================
MONGODB_URI=mongodb://admin:password@localhost:27017
MONGODB_DATABASE=moviedb

# ============================================================================
# Redis Configuration
# ============================================================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=

# ============================================================================
# API Configuration
# ============================================================================
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=4
API_RELOAD=false
LOG_LEVEL=info

# ============================================================================
# Authentication & Security
# ============================================================================
AUTH_ENABLED=false
JWT_SECRET=your-secret-key-change-in-production
VALID_API_KEYS=api-key-1,api-key-2

# ============================================================================
# Rate Limiting
# ============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_RPM=100
RATE_LIMIT_BURST=120

# ============================================================================
# CORS Configuration
# ============================================================================
CORS_ORIGINS=http://localhost:3000,http://localhost:8000,*
CORS_ALLOW_CREDENTIALS=true

# ============================================================================
# Cache Configuration
# ============================================================================
CACHE_ENABLED=true
CACHE_DEFAULT_TTL=300
CACHE_TRENDING_TTL=300
CACHE_MOVIE_TTL=300
CACHE_SENTIMENT_TTL=180
CACHE_ANALYTICS_TTL=1800
CACHE_SEARCH_TTL=600

# ============================================================================
# Query Engine Configuration
# ============================================================================
# Cutoff time in hours for batch/speed separation
CUTOFF_HOURS=48

# Maximum results per query
MAX_QUERY_RESULTS=100

# ============================================================================
# Monitoring & Logging
# ============================================================================
# Enable Prometheus metrics
METRICS_ENABLED=true
METRICS_PORT=9090

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# ============================================================================
# Development Settings
# ============================================================================
DEBUG=false
RELOAD_ON_CHANGE=false
